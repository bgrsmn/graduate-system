
@{
    ViewBag.Title = "Yorumlar";
}
@using MezunSistemi.Data.Model
@model List<Yorumlar>


<h2>YORUMLAR</h2>


<table id="example" class="display" style="width:100%">
    <thead>
        <tr>
            <th>Yorum</th>
            <th>Onay</th>
            <th>YorumId</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var yrm in Model)
        {
            <tr>
                <td>@yrm.Yorum</td>
                <td>@yrm.Onay</td>                         
                <td>@yrm.Id</td>
                <td><button class="guncelle btn btn-primary" value="@yrm.Id">Güncelle</button></td>
                <td><button class="sil btn btn-danger" value="@yrm.Id">Sil</button></td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th>Yorum</th>
            <th>Onay</th>
            <th>YorumId</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
    </tfoot>
</table>