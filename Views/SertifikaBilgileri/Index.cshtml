
@{
    ViewBag.Title = "SertifikaBilgileri";
}
@using MezunSistemi.Data.Model
@model List<SertifikaBilgileri>

<h2>SERTİFİKA BİLGİLERİ</h2>


<table id="example" class="display" style="width:100%">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Acıklama</th>
            <th>Tarıh</th>
            <th>GecerlılıkSuresı</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var srt in Model)
        {
            <tr>
                <td>@srt.Ad</td>
                <td>@srt.Acıklama</td>
                <td>@srt.Tarıh</td>
                <td>@srt.GecerlılıkSuresı</td>
                <td>@srt.Id</td>
                <td><button class="guncelle btn btn-primary" value="@srt.Id">Güncelle</button></td>
                <td><button class="sil btn btn-danger" value="@srt.Id">Sil</button></td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th>Ad</th>
            <th>Acıklama</th>
            <th>Tarıh</th>
            <th>GecerlılıkSuresı</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
    </tfoot>
</table>


